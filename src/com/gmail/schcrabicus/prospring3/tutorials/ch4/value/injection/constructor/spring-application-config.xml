<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="messageProvider"
          class="com.gmail.schcrabicus.prospring3.tutorials.ch4.value.injection.constructor.ConfigurableMessageProvider" >
        <constructor-arg type="java.lang.String">
            <value>Injected value</value>
        </constructor-arg>
    </bean>

    <bean id="messageRenderer" class="com.gmail.schcrabicus.prospring3.tutorials.ch4.value.injection.constructor.StandardOutMessageRenderer">
        <constructor-arg name="messageProvider">
            <ref bean="messageProvider" />
        </constructor-arg>
    </bean>

</beans>